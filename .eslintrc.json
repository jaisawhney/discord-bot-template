{
    "env": {
        "es6": true,
        "node": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 2022,
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "indent": ["error", 4],
        "semi": ["error", "always"],
        "quotes": ["error", "single"],
        "max-nested-callbacks": ["error", { "max": 2 }],
        "comma-dangle": ["error", "always-multiline"],
        "prefer-const": ["error"],
		"dot-location": ["error", "property"],
        "no-var": "error",
		"no-lonely-if": "error",
        "yoda": "error"
    }
}